{
  "expo": {
    "name": "Marmara PMS",
    "slug": "marmara-pms-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#111827"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.marmara.pms"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#111827"
      },
      "package": "com.marmara.pms",
      "usesCleartextTraffic": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "QR kod taramak için kamera erişimi gereklidir."
        }
      ],
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "Vardiya giriş/çıkış için QR kod tarama izni gereklidir."
        }
      ]
    ]
  }
}
